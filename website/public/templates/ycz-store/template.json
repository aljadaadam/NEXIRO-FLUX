{
  "id": "ycz-store",
  "name": "YCZ Store",
  "version": "1.0.0",
  "description": "قالب متجر YCZ – قالب متكامل يجمع واجهة المتجر الأمامية ولوحة تحكم الأدمن في مشروع واحد",
  "framework": "next",
  "frameworkVersion": "15.x",
  "runtime": "node",
  "port": 4000,

  "features": {
    "storefront": {
      "enabled": true,
      "description": "واجهة المتجر الأمامية للعملاء",
      "routes": [
        { "path": "/", "label": "الرئيسية", "screen": "HomeScreen" },
        { "path": "/services", "label": "الخدمات", "screen": "ServicesScreen" },
        { "path": "/orders", "label": "الطلبات", "screen": "OrdersScreen" },
        { "path": "/profile", "label": "الملف الشخصي", "screen": "ProfileScreen" },
        { "path": "/profile/details", "label": "البيانات الشخصية", "screen": "ProfileDetailsScreen" },
        { "path": "/profile/wallet", "label": "المحفظة", "screen": "ProfileWalletScreen" },
        { "path": "/profile/top-up", "label": "شحن الرصيد", "screen": "ProfileTopUpScreen" },
        { "path": "/support", "label": "الدعم", "screen": "SupportScreen" },
        { "path": "/pay/:reference", "label": "الدفع", "screen": "PaymentScreen" }
      ]
    },
    "admin": {
      "enabled": true,
      "description": "لوحة تحكم الأدمن",
      "routes": [
        { "path": "/admin", "label": "لوحة التحكم", "screen": "AdminDashboardScreen" },
        { "path": "/admin/products", "label": "المنتجات", "screen": "AdminProductsScreen" },
        { "path": "/admin/add-product", "label": "إضافة منتج", "screen": "AdminAddProductScreen" },
        { "path": "/admin/providers", "label": "المصادر", "screen": "AdminProvidersScreen" },
        { "path": "/admin/orders", "label": "الطلبات", "screen": "AdminOrdersScreen" },
        { "path": "/admin/payment-gateways", "label": "بوابات الدفع", "screen": "AdminPaymentGatewaysScreen" },
        { "path": "/admin/users", "label": "المستخدمون", "screen": "AdminUsersScreen" },
        { "path": "/admin/announcements", "label": "الإعلانات", "screen": "AdminAnnouncementsScreen" }
      ]
    }
  },

  "auth": {
    "admin": {
      "entry": "/login?token=<ADMIN_KEY>",
      "storage": "admin_key",
      "header": "x-admin-key"
    },
    "customer": {
      "entry": "/profile",
      "storage": "auth_token",
      "header": "authorization"
    }
  },

  "screens": {
    "storefront": "src/screens/{home,services,orders,profile,support}/",
    "admin": "src/screens/admin/",
    "shared": "src/components/"
  },

  "styles": {
    "global": "src/styles/globals.css",
    "admin": "src/app/admin.css",
    "animations": "src/styles/animations.css"
  }
}
